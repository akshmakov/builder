# Enable local package caching
OTHERMIRROR="deb [trusted=yes] file://${PBUILDER_REPO:-/var/opt/pbuilder/repo} ./"

# Mount our local mirror
BINDMOUNTS="$PBUILDER_REPO"

# Hooks for running pbuilder
HOOKDIR=${PBUILDER_HOOKS-"/var/opt/pbuilder/hooks"}

# Build Files
BUILDPLACE=${PBUILDER_BUILDDIR-"/workspace/build/"}

# Build Result
BUILDRESULT=${PBUILDER_RESULTDIR-"/workspace/output/"}

# build cache
CCACHEDIR=${PBUILDER-CCACHEDIR-"/workspace/ccache"}


## Switch for default image mirrors
if [[ -n  $PBUILDER_DEBIAN ]]; then
   MIRRORSITE=${PBUILDER_MIRRORSITE-"http://www.ip.debian.org/debian"}
   DISTRIBUTION=${PBUILDER_DISTRIBUTION-"jessie"}
else

   MIRRORSITE=${PBUILDER_MIRRORSITE-"http://archive.ubuntu.com/ubuntu"}
   DISTRIBUTION=${PBUILDER_DISTRIBUTION-"zesty"}

fi

## additional packages to put into the chroot
EXTRAPACKAGES=${PBUILDER_EXTRAPACKAGES-"apt-utils"}

##
ARCHITECTURE=${PBUILDER_ARCHITECTURE-`dpkg --print-architecture`}

BASETGZ=${PBUILDER_BASE-"/workspace/base.tgz"}